---
layout: layout
---

<div class="container py-8">
  <div class="text-center mb-12">
    <h1 class="text-3xl">Static Site Generators</h1>
    <h2 class="text-2xl">Build Performance Testing</h2>
  </div>

  <div class="mb-12">
    <h3 class="text-lg font-bold mb-2 text-center">Average Results</h2>
    <table class="table-auto mx-auto">
      <thead>
        <th class="border px-4 py-2 bg-gray-200">Name</th>
        {% for label in results.labels %}
          <th class="border px-4 py-2 bg-gray-200">{{ label }}</th>
        {% endfor %}
      </thead>
      <tbody>
        {% for result in results.data %}
          <tr>
            <td class="border px-4 py-2">{{ result.label }}</td>
            {% for item in result.data %}
              <td class="border px-4 py-2">{{ item }}</td>
            {% endfor %}
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>

  <div class="max-w-2xl mx-auto mb-12">
    <h3 class="text-lg font-bold mb-2 text-center">Build Scaling Performance</h2>
    <canvas id="results-chart" width="400" height="400"></canvas>
  </div>

  <div class="max-w-2xl mx-auto mb-12">
    <h3 class="text-lg font-bold mb-2 text-center">Base Build Times</h2>
    <canvas id="results-single-file" width="400" height="400"></canvas>
  </div>
</div>
